<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_linear"
        >

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:onClick="onback"
            android:padding="@dimen/dp10"
            android:src="@drawable/ic_arrow_left"
            android:tint="@color/textColblack"
            android:layout_centerVertical="true"></ImageView>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/otpnumber"
            android:text="Change Password"
            android:gravity="center_horizontal"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/platfairmediumheading"
            android:textSize="@dimen/dp18"
            android:padding="@dimen/dp10"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:id="@+id/defaultlinearbottomscreen"
        android:orientation="vertical"
        android:background="@color/white"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For your security, we have sent you a verification code on your registered email."
            android:padding="@dimen/dp10"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/platfairmediumheading"
            android:layout_gravity="center"
            android:textSize="@dimen/dp18"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40"
            android:text="Enter Verification Code"
            android:textSize="@dimen/dp16"
            android:id="@+id/test"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/playfairdisplayregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:id="@+id/edittext_otp"
            android:fontFamily="@font/gillsansmediumsubheading"
            android:drawablePadding="@dimen/dp30"
            android:background="@drawable/loginbg_layout"
            android:layout_marginTop="@dimen/dp10"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="New Password"
            android:textSize="@dimen/dp16"
            android:id="@+id/newpwd"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/playfairdisplayregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:id="@+id/ed_npswd"
            android:fontFamily="@font/gillsansmediumsubheading"
            android:drawablePadding="@dimen/dp30"
            android:background="@drawable/loginbg_layout"
            android:layout_marginTop="@dimen/dp10"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="Confirm New Password "
            android:textSize="@dimen/dp16"
            android:id="@+id/confrm"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/playfairdisplayregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:id="@+id/ed_cpswd"
            android:fontFamily="@font/gillsansmediumsubheading"
            android:drawablePadding="@dimen/dp30"
            android:background="@drawable/loginbg_layout"
            android:layout_marginTop="@dimen/dp10"/>

        <Button
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp40"
            android:text="Reset"
            android:textAllCaps="false"
            android:textSize="@dimen/dp16"
            android:layout_marginTop="@dimen/dp50"
            android:layout_gravity="center"
            android:id="@+id/text_reset"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/gillsanssubheading"
            android:background="@drawable/curve_bg"/>


    </LinearLayout>


</LinearLayout>


