<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="4"
    android:focusableInTouchMode="true"
    android:fillViewport="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp20"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColblack"
        android:textSize="@dimen/dp18"
        android:visibility="gone"
        android:fontFamily="@font/platfairmediumheading"
        android:text="Account"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:id="@+id/defaultlinearbottomscreen"
        android:orientation="vertical"
        android:background="@color/white">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/dp16"
            android:id="@+id/test"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/playfairdisplayregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:id="@+id/textnamesaved"
            android:drawablePadding="@dimen/dp30"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            tools:text="TESTING"
            android:fontFamily="@font/gillsanssubheading"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/playfairdisplayregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:id="@+id/ed_gendersaved"
            android:drawablePadding="@dimen/dp30"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            tools:text="TESTING"
            android:fontFamily="@font/gillsanssubheading"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/playfairdisplayregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:id="@+id/ed_dobsaved"
            android:drawablePadding="@dimen/dp30"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            tools:text="TESTING"
            android:fontFamily="@font/gillsanssubheading"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/playfairdisplayregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:id="@+id/ed_emailsaved"
            android:drawablePadding="@dimen/dp30"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            tools:text="TESTING"
            android:fontFamily="@font/gillsanssubheading"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject Category"
            android:textSize="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/textColblack"
            android:fontFamily="@font/playfairdisplayregular"
            android:visibility="visible"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:id="@+id/subject_category"
            android:drawablePadding="@dimen/dp30"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            tools:text="TESTING"
            android:visibility="visible"
            android:fontFamily="@font/gillsanssubheading"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_changepswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_pswd"
        android:textSize="@dimen/dp14"
        android:layout_marginTop="@dimen/dp50"
        android:layout_below="@+id/defaultlinearbottomscreen"
        android:textColor="#84827F"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gillsanssubheading"/>
    <TextView
        android:layout_width="@dimen/dp150"
        android:text="Logout"
        android:textSize="@dimen/dp18"
        android:layout_below="@+id/text_changepswd"
        android:padding="@dimen/dp10"
        android:fontFamily="@font/gillsanssubheading"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/curve_bg"
        android:gravity="center"

        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_centerInParent="true"


        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp10">


        <TextView
            android:layout_width="wrap_content"
            android:text="Terms of Use"
            android:textSize="@dimen/dp10"
            android:fontFamily="@font/playfairdisplayregular"
            android:textColor="@color/textCol"
            android:layout_height="wrap_content"
            android:id="@+id/navtextterms"
            android:padding="@dimen/dp2"
            />


        <TextView
            android:layout_width="wrap_content"
            android:text="|"
            android:textSize="@dimen/dp10"
            android:padding="@dimen/dp2"
            android:fontFamily="@font/playfairdisplayregular"
            android:textColor="@color/textCol"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:text="Privacy policy"
            android:textSize="@dimen/dp10"
            android:padding="@dimen/dp2"
            android:fontFamily="@font/playfairdisplayregular"
            android:textColor="@color/textCol"
            android:layout_height="wrap_content"
            android:id="@+id/navtextprivacy"
          />

    </LinearLayout>



</RelativeLayout>
